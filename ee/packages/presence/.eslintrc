{
	"extends": ["@rocket.chat/eslint-config"],
	"overrides": [
		{
			"files": ["**/*.spec.js", "**/*.spec.jsx"],
			"env": {
				"jest": true
			}
		},
		{
			"files": ["**/*.ts", "**/*.tsx"],
			"parserOptions": {
				"project": ["./tsconfig.json"]
			},
			"excludedFiles": ["**/*.test.ts", "**/*.config.ts"]
		}
	],
	"ignorePatterns": ["**/dist"]
}
